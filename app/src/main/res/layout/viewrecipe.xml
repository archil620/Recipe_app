<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:id="@+id/recipe_pic"
        android:src="@drawable/biriyani"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_pic">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/recipe_name"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@+id/recipe_pic"
                android:layout_marginTop="3dp"
                android:text="Recipe Name:"
                android:textColor="#6e7b8b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/incre"
                android:layout_marginBottom="@+id/description"
                android:text="Ingredints:"
                android:textColor="#6e7b8b" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/description"
                android:layout_marginBottom="@+id/textView2"
                android:text="Description:"
                android:textColor="#8b7b8b" />




        </LinearLayout>

    </ScrollView>

</LinearLayout>